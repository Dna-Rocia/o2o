<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.royail.o2o.dao.ShopCategoryDao">

	<select id="shopCategoryList"  resultType="com.royail.o2o.entity.ShopCategory">
		SELECT
			shop_category_id,
			shop_category_name,
			shop_category_desc,
			shop_category_img,
			priority,
			create_time,
			last_edit_time,
			parent_id
		FROM
			tb_shop_category
		<include refid="listCondition"/>
		ORDER BY
			priority DESC
		<!--limit #{rowIndex},#{pageSize} ; -->
	</select>

	<sql id="listCondition">
		<where>
			<if test="shopCategoryCondition != null">
				and parent_id is not null
			</if>		
			<if test="shopCategoryCondition.shopCategoryId != null">
				and shop_category_id = #{shopCategoryCondition.shopCategoryId}
			</if>
		</where>
	</sql>


	<select id="listShopCategoryCount"  resultType="int">
		SELECT
			count(*)
		FROM
			tb_shop_category
		<include refid="listCondition"/>
	</select>



</mapper>						
 		